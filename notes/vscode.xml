<CONTENT>
<BLIST><TITLE>CLI</TITLE>
  <ITEM><SLIST><TITLE>Print command line help</TITLE>
    <ITEM><CODEROUTINE>Code.exe --help</CODEROUTINE></ITEM>
  </SLIST></ITEM>
  <ITEM><SLIST><TITLE>Print version</TITLE>
    <ITEM><CODEROUTINE>Code.exe --version</CODEROUTINE></ITEM>
  </SLIST></ITEM>
  <ITEM><SLIST><TITLE>Wait for the files to be closed before returning</TITLE>
    <ITEM><CODEROUTINE>Code.exe --wait file1 file2</CODEROUTINE></ITEM>
  </SLIST></ITEM>
  <ITEM><SLIST><TITLE>Specify the directory that user data is kept in</TITLE>
    <ITEM><CODEROUTINE>Code.exe --user-data-dir H:\Documents\tools\VSCode\myDataDir</CODEROUTINE></ITEM>
  </SLIST></ITEM>
</BLIST>
<BR/>
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='P'/><BR/>
      <CODEROUTINE>Show All Commands</CODEROUTINE></TERM>
    <DESC>show command pallete</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='M'/></TERM>
    <DESC>show/hide errors and warnings</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='B'/></TERM>
    <DESC>show/hide left panel</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='J'/></TERM>
    <DESC>show/hide bottom panel</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='S'/></TERM>
    <DESC>keyboard shortcuts</DESC>
  </ROW>
</DEFINITIONTABLE>
<BR/>
File
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='N'/><BR/>
      double left click on tab menubar<BR/>
      <CODEROUTINE>New Untitled File</CODEROUTINE></TERM>
    <DESC>open new empty editor</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='E'/></TERM>
    <DESC>show file explorer</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='O'/></TERM>
    <DESC>open a file</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='R'/></TERM>
    <DESC>open a recent file</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='E'/><BR/>
      <MODIFIERKEY id='Ctrl'/><KEY id='P'/><BR/>
      <CODEROUTINE>Go to file…</CODEROUTINE></TERM>
    <DESC>go to file</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='O'/></TERM>
    <DESC>open folder</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='S'/></TERM>
    <DESC>save</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <KEY id='S'/></TERM>
    <DESC>save all</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='F4'/><BR/>
      <MODIFIERKEY id='Ctrl'/><KEY id='W'/></TERM>
    <DESC>close an editor</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='W'/></TERM>
    <DESC>close all editors</DESC>
  </ROW>
</DEFINITIONTABLE>
<BR/>
Display
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><KEY id='Z'/><BR/>
      <CODEROUTINE>Toggle Word Wrap</CODEROUTINE></TERM>
    <DESC>toggle word wrap</DESC>
  </ROW>
  <ROW>
    <TERM><CODEROUTINE>Toggle Render Whitespace</CODEROUTINE></TERM>
    <DESC>display/undisplay space characters</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <KEY id='Z'/></TERM>
    <DESC>toggle the zen mode</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='Num +'/></TERM>
    <DESC>zoom in</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='Num -'/></TERM>
    <DESC>zoom out</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='Num 0'/></TERM>
    <DESC>reset zoom</DESC>
  </ROW>
</DEFINITIONTABLE>
<BR/>
Folding
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id=')'/><BR/>
      <CODEROUTINE>Fold</CODEROUTINE></TERM>
    <DESC>fold</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='^'/><BR/>
      <CODEROUTINE>Unfold</CODEROUTINE></TERM>
    <DESC>unfold</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='à'/><BR/>
      <CODEROUTINE>Fold All</CODEROUTINE></TERM>
    <DESC>fold all</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='J'/><BR/>
      <CODEROUTINE>Unfold All</CODEROUTINE></TERM>
    <DESC>unfold all</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='&amp;'/><BR/>
      <CODEROUTINE>Fold Level 1</CODEROUTINE></TERM>
    <DESC>Fold level 1</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='é'/><BR/>
      <CODEROUTINE>Fold Level 2</CODEROUTINE></TERM>
    <DESC>Fold level 2</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='"'/><BR/>
      <CODEROUTINE>Fold Level 3</CODEROUTINE></TERM>
    <DESC>Fold level 3</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id="'"/><BR/>
      <CODEROUTINE>Fold Level 4</CODEROUTINE></TERM>
    <DESC>Fold level 4</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='('/><BR/>
      <CODEROUTINE>Fold Level 5</CODEROUTINE></TERM>
    <DESC>Fold level 5</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='-'/><BR/>
      <CODEROUTINE>Fold Level 6</CODEROUTINE></TERM>
    <DESC>Fold level 6</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='è'/><BR/>
      <CODEROUTINE>Fold Level 7</CODEROUTINE></TERM>
    <DESC>Fold level 7</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='_'/><BR/>
      <CODEROUTINE>Fold All Regions</CODEROUTINE></TERM>
    <DESC>Fold all regions<BR/>
      a region is between a comment containing <CODEROUTINE>#region <I>Region Name</I></CODEROUTINE> and a comment containing <CODEROUTINE>#endregion</CODEROUTINE></DESC>
  </ROW>
</DEFINITIONTABLE>
<BR/>
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><KEY id='Left'/></TERM>
    <DESC>go to previous edit location</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><KEY id='Right'/></TERM>
    <DESC>go to next edit location</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Alt'/><KEY id='Up'/><BR/>
      <MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Alt'/><KEY id='Down'/><BR/>
      <MODIFIERKEY id='Alt'/>left click</TERM>
    <DESC>multi-edition</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='F2'/><BR/>
      <CODEROUTINE>Change All Occurrences</CODEROUTINE></TERM>
    <DESC>select all the instances of the current selection</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='L'/><BR/>
      <CODEROUTINE>Select All Occurrences of Find Match</CODEROUTINE></TERM>
    <DESC>select all the instances of the current selection</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='D'/><BR/>
      <CODEROUTINE>Add Selection to Next Find Match</CODEROUTINE></TERM>
    <DESC>add the next found match to the current selection</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='D'/><BR/>
      <CODEROUTINE>Move Selection to Next Find Match</CODEROUTINE></TERM>
    <DESC>unselect the last selection and add the next found match the current selection</DESC>
  </ROW>
  <ROW>
    <TERM><CODEROUTINE>Sort Lines Ascending</CODEROUTINE></TERM>
    <DESC>sort lines in increasing order</DESC>
  </ROW>
  <ROW>
    <TERM><CODEROUTINE>Sort Lines Descending</CODEROUTINE></TERM>
    <DESC>sort lines in decreasing order</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><KEY id='Up'/></TERM>
    <DESC>move line up</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><KEY id='Down'/></TERM>
    <DESC>move line down</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><MODIFIERKEY id='Shift'/><KEY id='Up'/></TERM>
    <DESC>copy line up</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Alt'/><MODIFIERKEY id='Shift'/><KEY id='Down'/></TERM>
    <DESC>copy line down</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='C'/><BR/>
      <CODEROUTINE>Add Line Comment</CODEROUTINE></TERM>
    <DESC>comment the selected lines</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <MODIFIERKEY id='Ctrl'/><KEY id='U'/><BR/>
      <CODEROUTINE>Remove Line Comment</CODEROUTINE></TERM>
    <DESC>uncomment the selected lines</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id=':'/><BR/>
      <CODEROUTINE>Toggle Line Comment</CODEROUTINE></TERM>
    <DESC>toggle the line comment on the selected lines</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><MODIFIERKEY id='Shift'/><KEY id='A'/><BR/>
      <CODEROUTINE>Toggle Block Comment</CODEROUTINE></TERM>
    <DESC>toggle the block comment on the selected lines</DESC>
  </ROW>
</DEFINITIONTABLE>
<BR/>
<DEFINITIONTABLE>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='PageDown'/></TERM>
    <DESC>next editor</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='PageUp'/></TERM>
    <DESC>previous editor</DESC>
  </ROW>
  <ROW>
    <TERM><MODIFIERKEY id='Ctrl'/><KEY id='K'/>, <KEY id='O'/></TERM>
